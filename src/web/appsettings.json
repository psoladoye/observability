{
  "AllowedHosts": "*",
  "OpenTelemetry": {
    "ServiceName": "sample_web_api"
  },
  "LoggerConfig": {
    "Use": "serilog"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "OpenTelemetry": {
      "IncludeFormattedMessage": true,
      "IncludeScopes": true,
      "ParseStateValues": true
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithClientIp", "WithClientAgent" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}]: ({Application}/{MachineName}/{ProcessId}/{ThreadId}) {Message}{NewLine:1}{Exception:1}"
        }
      },
//      {
//        "Name": "GoogleCloudLogging",
//        "Args": {
//          "projectID": "paul-soladoye",
//          "logName": "observability-api-prod",
//          "useSourceContextAsLogName": false,
//          "labels": {
//            "environment": "Production"
//          }
//        }
//      }
    ],
    "Properties": {
      "Application": "sample_web_api"
    }
  }
}
